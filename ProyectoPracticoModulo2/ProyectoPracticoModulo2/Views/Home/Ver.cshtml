@model ProyectoPracticoModulo2.Models.Videogames
@{
    ViewBag.Title = "Ver";
}
<h2>@Model.name</h2>
<a class="btn btn-xs btn-primary " href="~/Home/Editar/@Model.id">Edit</a>
<a onclick="return confirm('¿Deseas eliminar esta tarea?');" class="btn btn-xs btn-danger" href="~/Home/Eliminar/@Model.id">Remove</a>
<table class="table">
    <tbody>
        <tr>
            <td>Name</td>
            <td>@Model.name</td>
        </tr>
        <tr>
            <td>Publisher</td>
            <td>@Model.publisher</td>
        </tr>
        <tr>
            <td>Year</td>
            <td>@Model.year</td>
        </tr>
        <tr>
            <td>Genre</td>
            <td>@Model.Genre()</td>
        </tr>
        <tr>
            <td>Platform</td>
            <td>@Model.Platform()</td>
        </tr>
        <tr>
            <td>Score</td>
            <td>@Model.score</td>
        </tr>
        <tr>
            <td>Online</td>
            <td>@Model.Online()</td>
        </tr>
        <tr>
            <td>PEGI</td>
            <td>@Model.Pegi()</td>
        </tr>
    </tbody>
</table>


